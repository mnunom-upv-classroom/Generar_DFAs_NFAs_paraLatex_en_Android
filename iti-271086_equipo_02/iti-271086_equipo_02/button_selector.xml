<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando el botón está presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF5733" /> <!-- Cambia el color cuando se presiona -->
        </shape>
    </item>

    <!-- Estado cuando el botón está enfocado (por ejemplo, navegación por teclado) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF5733" /> <!-- Cambia el color cuando está enfocado -->
        </shape>
    </item>

    <!-- Estado predeterminado cuando no está presionado ni enfocado -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2196F3" /> <!-- Color predeterminado cuando no está presionado ni enfocado -->
        </shape>
    </item>
</selector>
